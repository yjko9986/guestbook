<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">식단</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="식단 내용" required>
  </div>
  <div class="form-group">
    <label for="body">평가 내용</label>
    <textarea class="form-control" id="body" name="body" placeholder="구내식당의 음식의 질에 대해 평가해 주세요" rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="등록" class="btn btn-primary">
  </div>
</form>

<% include footer %>
